{
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Guiguerreiro39/siggn.git"
  },
  "scripts": {
    "build": "pnpm tsc -b tsconfig.build.json && pnpm -r run build",
    "test": "pnpm -r run test",
    "coverage": "vitest --coverage",
    "format": "prettier --write .",
    "ci": "pnpm run build && pnpm run check && pnpm run test",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint-fix": "pnpm lint --fix",
    "check": "tsc -b tsconfig.json && prettier --check .",
    "changeset": "changeset",
    "version": "dotenv -e .env -- pnpm changeset version",
    "release": "changeset publish",
    "prepare": "husky",
    "circular": "madge --extensions ts --circular --no-color --no-spinner packages/*/src"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-codegen": "^0.34.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
