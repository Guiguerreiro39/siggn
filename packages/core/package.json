{
  "name": "@siggn/core",
  "version": "0.0.5",
  "description": "A lightweight message bus system for Typescript",
  "keywords": [
    "pub/sub",
    "message",
    "event",
    "bus",
    "typesafe"
  ],
  "publishConfig": {
    "@siggn:registry": "https://registry.npmjs.org/",
    "directory": "dist",
    "access": "public"
  },
  "homepage": "https://github.com/Guiguerreiro39/siggn#readme",
  "bugs": {
    "url": "https://github.com/Guiguerreiro39/siggn/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Guiguerreiro39/siggn.git/",
    "directory": "packages/core"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "author": "Guilherme Guerreiro (https://guilhermegr.com)",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "build": "vite build",
    "prepublishOnly": "pnpm run ci",
    "prepack": "pnpm run build"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
